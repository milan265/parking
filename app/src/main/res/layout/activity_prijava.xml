<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrijavaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="25sp"
                android:layout_marginRight="35sp"
                app:srcCompat="@drawable/parking_logo" />

            <EditText
                android:id="@+id/inputPrijavaKorisnickoIme"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="75sp"
                android:layout_marginRight="35sp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="KorisniÄko ime"
                android:inputType="textPersonName"
                android:paddingLeft="20sp"
                android:paddingRight="20sp" />

            <EditText
                android:id="@+id/inputPrijavaLozinka"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="35sp"
                android:layout_marginRight="35sp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Lozinka"
                android:inputType="textPassword"
                android:paddingLeft="20sp"
                android:paddingRight="20sp" />

            <Button
                android:id="@+id/buttonPrijava"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_marginLeft="35sp"
                android:layout_marginTop="50sp"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="20sp"
                android:text="Prijavi se" />

            <TextView
                android:id="@+id/labelPrijavaPoruka"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="35sp"
                android:layout_marginRight="35sp"
                android:layout_marginBottom="20sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>